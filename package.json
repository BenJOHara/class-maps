{
  "name": "class-maps",
	"displayName": "Class Maps",
	"description": "Visulizations of classes and their dependencies",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onView:class-maps.map-view",
		"onCommand:class-maps.show-names",
		"onCommand:class-maps.show-number",
		"onCommand:class-maps.show-class-info"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "class-maps.map-view",
					"name": "Class Map"
				}
			]
		},
		"commands": [
			{
				"command": "class-maps.show-names",
				"category": "Class Map",
				"title": "Show Names"
			},
			{
				"command": "class-maps.show-class-info",
				"category": "Class Map",
				"title": "Show Class Info"
			},
			{
				"command": "class-maps.show-number",
				"category": "Class Map",
				"title": "Show Number"
			}
		]		
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
